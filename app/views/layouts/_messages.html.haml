-flash.each do |name, msg|
  - if msg.is_a?(String)
    %div{class: "alert alert-#{name == :notice ? "success" : "danger"}"}
      %button.close{data: {dismiss: 'alert'}} ×
      =content_tag :div, msg, id: "flash_#{name}"
  - if msg.is_a?(Array)
    %div{class: "alert alert-#{name == :notice ? "success" : "danger"}"}
      %button.close{data: {dismiss: 'alert'}} ×
      - msg.each do |m|
        =content_tag :div, m